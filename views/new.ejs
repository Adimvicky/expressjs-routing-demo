<% include header %>


   <div id="form">
        <h2 class="text-center text-muted">New Post</h2>
        <form method="post" role="form">

            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="What's your post about?" required>
            </div>

            <div class="form-group">
                <label for="content">Body</label>

                <textarea class="form-control" id="body" name="body" placeholder="Your post's content goes here..." rows="3" required></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary">
            </div>
        </form>
    </div>


    <% include footer %>