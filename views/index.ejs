<% include header %>

    <h3 class="text-center text-muted">Recent Posts</h3>

 <% if (entries.length) { %>
   <% entries.reverse().forEach(function(entry) { %>
     <div class="panel panel-default">
         <div class="panel-heading">
            <div class="text-muted pull-right">
                        <%= entry.published %>
            </div>
                <h3><%= entry.title %></h3> 
              
         </div>
                <div class="panel-body lead">
                 <%= entry.body %>
                 <form action="/<%=entry.title%>?_method=DELETE" method="POST">
                  <button class="btn btn-danger pull-right">
                    Delete
                  </button>
                 </form>
                </div>
     </div>
            <% }) %>
                <% } else { %>
             <div class="text-center">
                    <h4 class="lead">No posts</h4>
            <a class="btn btn-success btn-lg" href="/new">Add one!</a>
            </div>
            <% } %>
            
 <% include footer %>
